<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs"
     xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  <Package  Name="Tag Companion" 
            Manufacturer="Musson Industrial" 
            Version="1.0.0.0" 
            UpgradeCode="92352619-b2b1-4814-b6d0-67d99c06a05f"
            InstallerVersion="200">
    <MajorUpgrade DowngradeErrorMessage="A newer version of [ProductName] is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <Property Id="ARPPRODUCTICON" Value="favicon.exe" />

    <StandardDirectory Id="ProgramFiles6432Folder">
        <!-- Create a folder within the parent folder given the name -->
        <Directory Id="INSTALLFOLDER" Name="!(bind.Property.Manufacturer)\!(bind.Property.ProductName)" />
    </StandardDirectory>

    <StandardDirectory Id="ProgramMenuFolder">
        <!-- Create a folder within the parent folder given the name -->
        <Directory Id="STARTFOLDER" Name="!(bind.Property.Manufacturer)\!(bind.Property.ProductName)" />
    </StandardDirectory>



    <ComponentGroup Id="TagCompanionInstall" Directory="INSTALLFOLDER">
      <Component Id="TagCompanion.exe" Guid="9fbfa205-5ee1-4e7c-8f21-a7f1058bcb42">
        <File Id="TagCompanion.exe" Source="TagCompanion.exe" KeyPath="yes" />           
      </Component>
    </ComponentGroup>

    <Icon Id="favicon.exe" SourceFile="images\\favicon.ico" />

    <Feature Id="TagCompanion" Title="Tag Companion">
      <ComponentGroupRef Id="TagCompanionInstall"/>
    </Feature>

    <UIRef Id="WixUI_InstallDir" />
  </Package>
</Wix>
